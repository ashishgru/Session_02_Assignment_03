<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#161616"
    tools:context="com.acadgild.session_02_assignment_03.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/enter_card_balance"
                android:id="@+id/textView1"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/enter_yearly_interest_rate"
                android:id="@+id/textView2"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText2"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:paddingBottom="10dp"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/enter_minimum_payment"
                android:id="@+id/textView3"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText3"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/final_card_balance"
                android:id="@+id/textView4"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText4"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/months_remaining"
                android:id="@+id/textView5"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText5"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/CodeLinearLayout"
            android:layout_weight="1">
            <TextView
                style="@style/CodeTextView"
                android:text="@string/interest_paid_will_be"
                android:id="@+id/textView6"
                android:layout_weight="1" />
            <EditText
                style="@style/CodeEditView"
                android:id="@+id/editText6"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                style="@style/CodeButtonView01"
                android:text="@string/compute"
                android:id="@+id/button1"
                android:layout_weight="2"/>
            <Button
                style="@style/CodeButtonView01"
                android:text="CLEAR"
                android:id="@+id/button2"
                android:layout_weight="2"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
